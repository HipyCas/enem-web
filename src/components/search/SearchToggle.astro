<button
  id="search-toggle"
  class="px-4 h-full cursor-pointer"
  aria-label="Buscar"
>
  <i class="-mb-1 w-5 h-5 i-tabler-search text-dark dark:text-clear"></i>
</button>

<!-- TODO When clicking or writing some letter, open this and start reading the text -->
<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.getElementById("search-toggle");
    const overlay = document.getElementById("search-modal");
    const searchInput = document.querySelector("#search-modal input");
    const mobileOverlay = document.getElementById("mobileMenuOverlay");
    const body = document.body;

    toggle.onclick = () => {
      overlay.toggleAttribute("data-open");
      overlay.toggleAttribute("aria-hidden");
      body.toggleAttribute("data-overlay-open");
      if (overlay.hasAttribute("data-open")) {
        if (mobileOverlay.hasAttribute("data-open"))
          mobileOverlay.removeAttribute("data-open");

        searchInput.focus();
      }
      // if (document.body.scroll = "yes") {
      //   // document.documentElement.style.overflow = 'hidden';
      //   document.body.scroll = "no";
      // } else {
      //   // document.documentElement.style.overflow = 'initial';
      //   document.body.scroll = "yes";
      // }
    };
  });
</script>
